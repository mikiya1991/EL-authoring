<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    
    <LinearLayout 
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/blue"
        android:orientation="vertical"
         android:gravity="center_horizontal"
        >
         <TextView
        android:text="电磁泄漏手机认证系统客户端"
        android:textSize="22dp"
        android:id="@+id/title"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        />
         <TextView 
         android:text="smart phone authoring system"
         android:textSize="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:gravity="center_horizontal"
         />
    </LinearLayout>
   
    <Button
        android:id="@+id/buttonchoosefile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="80dp"
        android:onClick="BtnChofileOnClick"
        android:text="选择" />
    
    <Button
        android:id="@+id/buttontest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/buttonchoosefile"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="90dp"
        android:onClick="BtnTestOnClick"
        android:text="发送" />

    <TextView
        android:id="@+id/test"
        android:layout_below="@+id/buttonchoosefile"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="path"
        />
        
    <EditText
        android:id="@+id/texttest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonchoosefile"
        android:layout_toRightOf="@+id/test"
        android:layout_marginTop="30dp"
        android:hint="the file path " />

    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttest"
        android:layout_marginTop="40dp"
        android:text="ssid"
        />
    
    <EditText
        android:id="@+id/textout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="the session id"
        android:layout_below="@+id/texttest" 
        android:layout_toRightOf="@+id/out" />
    
    <TextView
        android:id="@+id/imsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMSI"
        android:layout_below="@+id/textout"
        android:layout_marginTop="40dp" />
    
    <EditText
        android:id="@+id/e_imsi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imsi"
        android:layout_below="@+id/textout"
        android:layout_marginTop="30dp"
     
        />
    
    <LinearLayout 
        android:layout_below="@+id/imsi"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/blue"
        >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="2015年5月  @东南大学信息安全实验室-宋宇波副教授"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
         android:gravity="center_horizontal"
        />
	</LinearLayout>
</RelativeLayout>